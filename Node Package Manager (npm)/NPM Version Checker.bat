@echo off
echo -------------------------------------------------------------------------------
echo  NPM Info 
echo -------------------------------------------------------------------------------

echo - Get the main NPM version...
call npm -v 

set /p pkgName= - Enter Package Name: 
echo.


if "%pkgName%"=="" goto:npm_list
goto:npm_info


:npm_list
rem ### Use this command for top-level modules
rem npm list --depth=0
echo -------------------------------------------------------------------------------
echo - Listing [ local ] dependencies...
echo -------------------------------------------------------------------------------
call npm list
echo -------------------------------------------------------------------------------
echo - Listing [ global ] dependencies...
echo -------------------------------------------------------------------------------
call npm list -g
echo -------------------------------------------------------------------------------
:npm_list_done
goto:done


:npm_info
echo -------------------------------------------------------------------------------
echo - Get [ local ] version of '%pkgName%'...
echo -------------------------------------------------------------------------------
call npm list %pkgName%
echo -------------------------------------------------------------------------------
echo - Get [ global ] version of '%pkgName%'...
echo -------------------------------------------------------------------------------
call npm list -g %pkgName%
echo -------------------------------------------------------------------------------
echo - Get [ remote ] version of '%pkgName%'...
echo -------------------------------------------------------------------------------
call npm view %pkgName% version
echo -------------------------------------------------------------------------------
:npm_info_done
goto:done



:done
pause